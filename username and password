print("Hello There ")  #welcome statement
firstname = input(" Please Enter your first name:") #ask user for first name 
first_firstthree = firstname[:3] # Grabs first 3 letters
lastname = input(" Please Enter your last name:") #Ask user for last name
last_firstthree = lastname [:3]
studentid = input(" Please Enter Student ID:") #Ask user for Student ID
id_lastfour = studentid [-4:] #Grabs last 4

#create username
username = last_firstthree + first_firstthree + id_lastfour 
print("\n")

while True: #while statement to run through password error
   
    print("Password Requirements:") #prints password requirments
    print("Must be at least 7 characters long") 
    print("Must contain at least one uppercase letter") 
    print("Must contain at least one lowercase letter")
    print("Must contain at least one digit") 
   
    password = input("Create Password: ") #ask user to create password
    
    if ( #Checks Password requirments
        len(password) >= 7
        and any(char.isupper() for char in password)
        and any(char.islower() for char in password)
        and any(char.isdigit() for char in password)
    ):
        break #if requirments are met, stops the loop
    else:
        print("error, password does not meet requirements") #if not ask user to try again

print("\n")      
print("Username:" + username)
print("Password:" + password)
